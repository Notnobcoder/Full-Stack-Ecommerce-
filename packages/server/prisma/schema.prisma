generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
  avatar   String @default("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png")
}

model Listing {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  address       String
  regularPrice  Int
  discountPrice Int
  bathrooms     Int
  bedrooms      Int
  furnished     Boolean
  parking       Boolean
  type          String
  offer         Boolean
  imageUrls     String[]
  userRef       String
}
